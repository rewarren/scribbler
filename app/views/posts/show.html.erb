<h2>
  <%= @post.title %>
  <%= @post.date %>
</h2>

<h3>
  <%= @post.content %>
</h3>

<h4>Comments</h4>
  <% @post.comments.each do |comment| %>
  <%= comment.author %> said "<%= comment.content %>" // <%= comment.date %>

  <%= link_to "delete comment", [comment.post, comment], method: :delete %>
  <% end %>





<h4>Add a comment</h4>
<h4>
    <%= form_for ([@post, @post.comments.build]) do |f| %>

    <%= f.label :author %>
    <%= f.text_field :author %>

    <%= f.label :date %>
    <%= f.text_field :date %>

    <%= f.label :content %>
    <%= f.text_field :content %>

    <%= f.label :post_id %>
    <%= f.text_field :post_id %>

    <%= f.submit %>
  <% end %>
</h4>


<h4>
  <%= link_to "edit this post",  edit_post_path(@post) %> //
  <%= link_to "back to main blog", posts_path %>
</h4>
