<%= form_for @post do |f| %>

  <%= f.label :author %>
  <%= f.text_field :author %>

  <%= f.label :date %>
  <%= f.text_field :date %>
<p>
  <%= f.label :title %>
  <%= f.text_field :title %>
</p>
<p>
  <%= f.label :content %>
</p>
<p>
  <%= f.text_field :content %>
</p>
<p>
  <%= f.submit %>
</p>
<% end %>
